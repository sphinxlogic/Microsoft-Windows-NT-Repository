X#include <stdio.h>
X#include <sys/types.h>
X#include <sys/file.h>
X#include <sys/time.h>
X#include <sys/tty.h>
X#include <errno.h>
X#include <sys/ioctl.h>
X#include <sys/workstation.h>
X#include <sys/pmagro.h>
X#include <sys/i2c.h>
X
X#include "misc.h" /* GET MAXSCREENS SYMBOL */
X#include "rop.h" /* RopPtr STRUCT DEFINITION SHARED WITH ROP.C */
X#include "libpip.h"
X
Xextern RopRec ropInfo[];
Xextern int wsFd;
X
X#define SET_MAP_REG(off) { *map_reg = (*map_reg & 0xfffffff0) | (off);}
X
X/*
X*/
X
X#define HALFWAY         ((unsigned long)1<<31)
X#define AFTER(ta, tb)   ((tb) - (ta) >=  HALFWAY)
X#define BEFORE(ta, tb)  ((ta) - (tb) >=  HALFWAY)
X
Xstatic int pipDCSCSourceType = DCSC_COMPOSITE_LUT;
Xstatic int i2cDelay = 5;
X
X#ifndef TC1_CSR2_SYNC_NOT_HREF
X#define TC1_CSR2_SYNC_NOT_HREF 0x01
X#endif
X
X/* END DCC MOD */
X
X/*
X *	Address pointer union used to alias a location to more than
X *	one width
X */
Xtypedef union
X{
X	u_char		*byte;		/* Address of an 8-bit entity. */
X	u_short		*half_word;	/* Address of a 16-bit entity. */
X	u_int		integer;	/* Address value as an integer. */
X	u_int		*word;		/* Address of a 32-bit entity. */
X}	Access;
X
Xstatic int	exit_on_error = 0;
X
X/*"i2c_clock"
X *
X *	Set the i2c bus clock signal to high or low state. This is used by diagnostics
X *	to get the i2c bus into a known state.
X */
Xi2c_clock(port, state)
X	u_char	*port;		/* -> port for i2c bus. */
X	int		state;	/* = 1 for high, 0 for low. */
X{
X	if ( state )
X	{
X		I2C_CLOCK_HIGH;
X	}
X	else
X	{
X		I2C_CLOCK_LOW;
X	}
X}
X
X/*"i2c_clock_delay"
X *
X *	Delay an interval to let i2c bus clock signal settle.
X */
Xi2c_clock_delay()
X{
X    int i;
X/* DCC MOD --- SUBSTITUTED VARIABLE FOR FIXED NUMBER --- 04.06.91 */
X    for (i = 0; i < i2cDelay; i++) ;
X/* END DCC MOD */
X    return i;
X}
X
X/*"i2c_data"
X *
X *	Set the i2c bus data signal to high or low state. This is used by diagnostics
X *	to get the i2c bus into a known state.
X */
Xi2c_data(port, state)
X	u_char	*port;		/* -> port for i2c bus. */
X	int		state;	/* = 1 for high, 0 for low. */
X{
X	if ( state )
X	{
X		I2C_DATA_HIGH;
X	}
X	else
X	{
X		I2C_DATA_LOW;
X	}
X}
X
X/*"i2c_data_delay"
X *
X *	Delay an interval to let i2c bus clock signal settle.
X */
Xi2c_data_delay()
X{
X    int i;
X/* DCC MOD --- SUBSTITUTED VARIABLE FOR FIXED NUMBER --- 04.06.91 */
X    for (i = 0; i < i2cDelay; i++) ;
X/* END DCC MOD */
X    return i;
X}
X	
X/*"i2c_exit_on_error"
X *
X *	Set quick exit bit to indicate quick exit on error, or to continue processing.
X */
Xi2c_exit_on_error( flag )
X	int		flag;		/*  = value to set quick exit flag to. */
X{
X	extern int	exit_on_error;	/* Flag indicating if quick exit to be taken on error. */
X
X	exit_on_error = flag;
X}
X/*"i2c_read"
X *
X *	Write a slave address and subcomponent request to the i2c bus and read back the
X *	data associated with it.
X *
X *		= 1 if success
X *		= 0 if error detected
X */
Xi2c_read(port, slave, subaddr, data)
X	u_char	*port;		/* -> port for i2c bus. */
X	int		slave;		/* =  address of slave device writing to. */
X	int		subaddr;	/* =  address of subcomponent writing to. */
X	int		*data;		/* -> where to place data read. */
X{
X	int				delay;		/* Index: number of times tested for clock and data both high. */
X	int				retry;		/* Index: number of attempt to get clock and data both high. */
X
X    /*  Make sure the i2c interface is in the proper state (both clock and data
X     *  bits are high). If they are not, try toggling the clock and sending
X     *  a stop command sequence.
X     */
X    for ( retry = 0; retry < 20; retry++ )
X    {
X        for (delay = 0; delay < 100000; delay++)
X        {
X            if ( (*port & (I2C_CLOCK_ON_DATA_ONE)) == I2C_CLOCK_ON_DATA_ONE ) goto start;
X        }
X        I2C_DATA_HIGH;
X        I2C_CLOCK_LOW;
X        I2C_CLOCK_HIGH;
X     
X        I2C_CLOCK_LOW;
X        I2C_DATA_LOW;
X        I2C_CLOCK_HIGH;
X        I2C_DATA_HIGH;
X    }
X
X    if ( (*port & (I2C_CLOCK_ON_DATA_ONE)) != I2C_CLOCK_ON_DATA_ONE )
X    {
X        fprintf(stderr,"i2c_write(%02x,%02x,%02x): i2c bus not ready!!!!\n", slave, subaddr, data);
X        return 0;
X    }
X
X    /*  Send out the start pulse signals. 
X     */
Xstart:
X    I2C_DATA_LOW;
X    I2C_CLOCK_LOW;
X
X	/*	Send out the slave device address. If there is an error
X	 *	pull down data then clock, then pull both high together,
X	 *	then clock high, and wait a while.
X	 */
X	if ( !i2c_write_byte(port, slave) )
X	{
X		fprintf(stderr,"i2c_read(%02x,%02x): unable to send slave byte in set address correctly\n", slave, subaddr);
X		I2C_DATA_LOW;
X		I2C_CLOCK_LOW;
X		I2C_CLOCK_DATA_HIGH;
X		I2C_CLOCK_HIGH;
X		return 0;
X	}
X
X	/*	Send out the slave subcomponent address. If there is an error
X	 *	pull down data then clock, then pull both high together,
X	 *	then clock high, and wait a while.
X	 */
X	if ( !i2c_write_byte(port, subaddr) )
X	{
X		fprintf(stderr,"i2c_read(%02x,%02x): unable to send subaddress byte correctly \n", slave, subaddr);
X		I2C_DATA_LOW;
X		I2C_CLOCK_LOW;
X		I2C_CLOCK_DATA_HIGH;
X		I2C_CLOCK_HIGH;
X		return 0;
X	}
X
X	/*	Initiate a new sequence by setting the data value low while clock is high.
X	 *	(The data value was already high from the last byte write acknowledge
X	 *	cycle - see "i2c_write_byte" below.)
X	 *	Send out the slave device address with a read indication. 
X	 *	If there is an error pull down data then clock, then pull both high 
X	 *	together, then clock high, and wait a while.
X	 */
X	I2C_CLOCK_LOW;
X	I2C_CLOCK_HIGH;
X	I2C_DATA_LOW;
X	if ( !i2c_write_byte(port, slave | I2C_READ_BIT) )
X	{
X		fprintf(stderr,"i2c_read(%02x,%02x): unable to send slave byte in read cmd correctly \n", slave, subaddr);
X		I2C_DATA_LOW;
X		I2C_CLOCK_LOW;
X		I2C_CLOCK_DATA_HIGH;
X		I2C_CLOCK_HIGH;
X		return 0;
X	}
X
X	/*	Read back the data byte. If there is an error
X	 *	pull down data then clock, then pull both high together,
X	 *	then clock high, and wait a while.
X	 */
X	if ( !i2c_read_byte(port, data) )
X	{
X		fprintf(stderr,"i2c_read(%02x,%02x): unable to read data byte correctly \n", slave, subaddr);
X		I2C_DATA_LOW;
X		I2C_CLOCK_LOW;
X		I2C_CLOCK_DATA_HIGH;
X		I2C_CLOCK_HIGH;
X		return 0;
X	}
X
X	return 1;
X}
X
X/*"i2c_read_byte"
X *
X *  Toggle a byte value off the i2c bus and wait for an acknowledgment.
X *  This routine assumes that the i2c interface is properly prepared to
X *  send data. Each data bit is transmitted by:
X *      a) setting the clock bit low
X *      b) setting the data bit to the appropriate sense (0 or 1)
X *      c) setting the clock bit high
X *
X *      = 1 if successful
X *      = 0 if error detected
X */
Xi2c_read_byte(port, data)
X    u_char  *port;      /* -> i2c port to read from. */
X    int     *data;      /* -> where to place data read. */
X{
X    int     bit;        /* Index: next bit to be transmitted. */
X    int     delay;      /* How long to loop waiting for i2c to become ready. */
X 
X 
X	/*	Loop reading in the bits, assembling them into a byte.
X	 */
X    for (bit = 0, *data = 0; bit < 8; bit++)
X    {
X        I2C_CLOCK_LOW;
X		I2C_DATA_HIGH;	/* #### make sure slave is driving bus, (I'm not!). */
X        I2C_CLOCK_HIGH;
X		*data |= (*port & I2C_DATA_ONE) >> bit;
X    }
X 
X	/*	We only read a single byte, so don't send an acknowledgement, rather
X	 *	send the stop sequence.
X	 */
X	I2C_CLOCK_LOW;
X    I2C_DATA_LOW;
X    I2C_CLOCK_HIGH;
X    I2C_DATA_HIGH;
X}
X
X/*"i2c_write"
X *
X *      = 1 if success
X *      = 0 if error detected
X */
Xi2c_write(port, slave, subaddr, data)
X    u_char  *port;      /* -> port for i2c bus. */
X    int     slave;      /* =  address of slave device writing to. */
X    int     subaddr;    /* =  address of subcomponent writing to. */
X    int     data;       /* =  data to write. */
X{
X	int		delay;		/* Index: number of times tested for clock and data both high. */
X	int		retry;		/* Index: number of attempt to get clock and data both high. */
X
X    /*  Make sure the i2c interface is in the proper state (both clock and data
X     *  bits are high). If they are not, try toggling the clock and sending
X     *  a stop command sequence.
X     */
X    for ( retry = 0; retry < 20; retry++ )
X    {
X        for (delay = 0; delay < 100000; delay++)
X        {
X            if ( (*port & (I2C_CLOCK_ON_DATA_ONE)) == I2C_CLOCK_ON_DATA_ONE ) goto start;
X        }
X        I2C_DATA_HIGH;
X        I2C_CLOCK_LOW;
X        I2C_CLOCK_HIGH;
X     
X        I2C_CLOCK_LOW;
X        I2C_DATA_LOW;
X        I2C_CLOCK_HIGH;
X        I2C_DATA_HIGH;
X    }
X
X	if ( (*port & (I2C_CLOCK_ON_DATA_ONE)) != I2C_CLOCK_ON_DATA_ONE )
X	{
X		fprintf(stderr,"i2c_write(%02x,%02x,%02x): i2c bus not ready!!!!\n", slave, subaddr, data);
X		return 0;
X	}
X
X	/*	Send out the start pulse signals. 
X	 */
Xstart:
X    I2C_DATA_LOW;
X    I2C_CLOCK_LOW;
X 
X    /*  Send out the slave device address. If there is an error
X     *  pull down data then clock, then pull both high together,
X     *  then clock high, and wait a while.
X     */
X    if ( !i2c_write_byte(port, slave) )
X    {
X        fprintf(stderr,"i2c_write(%02x,%02x,%02x): unable to send slave byte correctly\n", slave, subaddr, data);
X        I2C_DATA_LOW;
X        I2C_CLOCK_LOW;
X        I2C_CLOCK_DATA_HIGH;
X        I2C_CLOCK_HIGH;
X        return 0;
X    }
X 
X    /*  Send out the slave subcomponent address. If there is an error
X     *  pull down data then clock, then pull both high together,
X     *  then clock high, and wait a while.
X     */
X    if ( !i2c_write_byte(port, subaddr) )
X    {
X        fprintf(stderr,"i2c_write(%02x,%02x,%02x): unable to send subaddress byte correctly\n", slave, subaddr, data);
X        I2C_DATA_LOW;
X        I2C_CLOCK_LOW;
X        I2C_CLOCK_DATA_HIGH;
X        I2C_CLOCK_HIGH;
X        return 0;
X    }
X 
X    /*  Send out the data byte. If there is an error
X     *  pull down data then clock, then pull both high together,
X     *  then clock high, and wait a while.
X     */
X    if ( !i2c_write_byte(port, data) )
X    {
X        fprintf(stderr,"i2c_write(%02x,%02x,%02x): unable to send data byte correctly\n", slave, subaddr, data);
X        I2C_DATA_LOW;
X        I2C_CLOCK_LOW;
X        I2C_CLOCK_DATA_HIGH;
X        I2C_CLOCK_HIGH;
X        return 0;
X    }
X 
X	/*	All done with the transmission, so make sure i2c bus is in a known stopped
X	 *	state and return success to our caller.
X	 */
X	I2C_DATA_LOW;
X	I2C_CLOCK_HIGH;
X	I2C_DATA_HIGH;
X    return 1;
X}
X
X/*"i2c_write_byte"
X *
X *	Toggle a byte value into the i2c bus and wait for an acknowledgment.
X *	This routine assumes that the i2c interface is properly prepared to
X *	accept data. Each data bit is transmitted by:
X *		a) setting the clock bit low
X *		b) setting the data bit to the appropriate sense (0 or 1)
X *		c) setting the clock bit high
X *
X *		= 1 if successful
X *		= 0 if error detected
X */
Xi2c_write_byte(port, data)
X	u_char	*port;		/* -> i2c port to write to. */
X	int		data;		/* =  data to be written. */
X{
X	int			bit;			/* Index: next bit to be transmitted. */
X	int			delay;			/* How long to loop waiting for i2c to become ready. */
X	extern int	exit_on_error;	/* Flag indicating if quick exit to be taken on error. */
X
X
X	for (bit = 0; bit < 8; bit++)
X	{
X		I2C_CLOCK_LOW;
X		*port = (*port & I2C_DATA_ZERO) | ( (data << bit) & I2C_DATA_ONE );
X		I2C_DATA_DELAY;
X		I2C_CLOCK_HIGH;
X		I2C_CLOCK_DELAY;
X	}
X
X	/*	Set the clock is low, set the data bit high and look for the acknowledge from 
X	 *	the slave device we have written to. When we receive the acknowledge
X	 *	bring the clock back high then low.
X	 */
X	I2C_CLOCK_LOW;
X	I2C_DATA_HIGH;
X	I2C_CLOCK_DATA_HIGH;
X	for (delay = 0; delay < 100000; delay++)
X	{
X		if ( (*port & I2C_DATA_ONE) == 0 ) break;
X	}
X	if ( (*port & (I2C_DATA_ONE)) != 0 ) 
X	{
X		fprintf(stderr,"i2c_write_byte(%02x): i2c bus not ready!!!!\n", data);
X		if ( exit_on_error ) 
X		{
X			exit(1); 
X		}
X		else 
X		{
X			return 0;
X		}
X	}
X	I2C_CLOCK_LOW;
X	I2C_DATA_HIGH;		/*####*/
X	return 1;
X}
X
X/*"i2c_write_bytes"
X *
X *	Toggle a byte value into the i2c bus and wait for an acknowledgment.
X *	This routine assumes that the i2c interface is properly prepared to
X *	accept data. Each data bit is transmitted by:
X *		a) setting the clock bit low
X *		b) setting the data bit to the appropriate sense (0 or 1)
X *		c) setting the clock bit high
X *
X *		= 1 if successful
X *		= 0 if error detected
X */
Xi2c_write_bytes(port, count, data)
X	u_char	*port;		/* -> i2c port to write to. */
X	int		count;		/* =  number of data bytes to write. */
X	u_char	*data;		/* =  data to be written. */
X{
X	int			bit;			/* Index: next bit to be transmitted. */
X	int			data_i;			/* Index: next data byte to write. */
X	int			delay;			/* How long to loop waiting for i2c to become ready. */
X	extern int	exit_on_error;	/* Flag indicating if quick exit to be taken on error. */
X
X
X	for ( data_i = 0; data_i < count; data_i++ )
X	{
X		for (bit = 0; bit < 8; bit++)
X		{
X			I2C_CLOCK_LOW;
X			*port = (*port & I2C_DATA_ZERO) | 
X				( (data[data_i] << bit) & I2C_DATA_ONE );
X			I2C_DATA_DELAY;
X			I2C_CLOCK_HIGH;
X			I2C_CLOCK_DELAY;
X		}
X
X		/*	Set the clock is low, set the data bit high and look for the acknowledge from 
X		 *	the slave device we have written to. When we receive the acknowledge
X		 *	bring the clock back high then low.
X		 */
X		I2C_CLOCK_LOW;
X		I2C_DATA_HIGH;
X		I2C_CLOCK_DATA_HIGH;
X		for (delay = 0; delay < 100000; delay++)
X		{
X			if ( (*port & I2C_DATA_ONE) == 0 ) break;
X		}
X		if ( (*port & (I2C_DATA_ONE)) != 0 ) 
X		{
X			fprintf(stderr,"i2c_write_byte(%02x): i2c bus not ready!!!!\n", data);
X			if ( exit_on_error ) 
X			{
X				exit(1); 
X			}
X			else 
X			{
X				return 0;
X			}
X		}
X	}
X	I2C_CLOCK_LOW;
X	I2C_DATA_HIGH;		/*####*/
X	return 1;
X}
X
X/*"i2c_write_list"
X *
X *      = 1 if success
X *      = 0 if error detected
X */
Xi2c_write_list(port, slave, subaddr, count, data)
X    u_char  *port;      /* -> port for i2c bus. */
X    int     slave;      /* =  address of slave device writing to. */
X    int     subaddr;    /* =  address of subcomponent writing to. */
X	int		count;		/* =  count of data to be written. */
X    u_char  *data;      /* =  data to write. */
X{
X	int		delay;		/* Index: number of times tested for clock and data both high. */
X	int		retry;		/* Index: number of attempt to get clock and data both high. */
X
X    /*  Make sure the i2c interface is in the proper state (both clock and data
X     *  bits are high). If they are not, try toggling the clock and sending
X     *  a stop command sequence.
X     */
X    for ( retry = 0; retry < 20; retry++ )
X    {
X        for (delay = 0; delay < 100000; delay++)
X        {
X            if ( (*port & (I2C_CLOCK_ON_DATA_ONE)) == I2C_CLOCK_ON_DATA_ONE ) goto start;
X        }
X        I2C_DATA_HIGH;
X        I2C_CLOCK_LOW;
X        I2C_CLOCK_HIGH;
X     
X        I2C_CLOCK_LOW;
X        I2C_DATA_LOW;
X        I2C_CLOCK_HIGH;
X        I2C_DATA_HIGH;
X    }
X
X	if ( (*port & (I2C_CLOCK_ON_DATA_ONE)) != I2C_CLOCK_ON_DATA_ONE )
X	{
X		fprintf(stderr,"i2c_write_list(%02x,%02x): i2c bus not ready!!!!\n", slave, subaddr);
X		return 0;
X	}
X
X	/*	Send out the start pulse signals. 
X	 */
Xstart:
X    I2C_DATA_LOW;
X    I2C_CLOCK_LOW;
X 
X    /*  Send out the slave device address. If there is an error
X     *  pull down data then clock, then pull both high together,
X     *  then clock high, and wait a while.
X     */
X    if ( !i2c_write_byte(port, slave) )
X    {
X        fprintf(stderr,"i2c_write(%02x,%02x): unable to send slave byte correctly\n", slave, subaddr);
X        I2C_DATA_LOW;
X        I2C_CLOCK_LOW;
X        I2C_CLOCK_DATA_HIGH;
X        I2C_CLOCK_HIGH;
X        return 0;
X    }
X 
X    /*  Send out the slave subcomponent address. If there is an error
X     *  pull down data then clock, then pull both high together,
X     *  then clock high, and wait a while.
X     */
X    if ( !i2c_write_byte(port, subaddr) )
X    {
X        fprintf(stderr,"i2c_write(%02x,%02x,%02x): unable to send subaddress byte correctly\n", slave, subaddr, data);
X        I2C_DATA_LOW;
X        I2C_CLOCK_LOW;
X        I2C_CLOCK_DATA_HIGH;
X        I2C_CLOCK_HIGH;
X        return 0;
X    }
X 
X    /*  Send out the data bytes. If there is an error
X     *  pull down data then clock, then pull both high together,
X     *  then clock high, and wait a while.
X     */
X    if ( !i2c_write_bytes(port, count, data) )
X    {
X        fprintf(stderr,"i2c_write(%02x,%02x): unable to send data byte correctly\n", slave, subaddr);
X        I2C_DATA_LOW;
X        I2C_CLOCK_LOW;
X        I2C_CLOCK_DATA_HIGH;
X        I2C_CLOCK_HIGH;
X        return 0;
X    }
X 
X	/*	All done with the transmission, so make sure i2c bus is in a known stopped
X	 *	state and return success to our caller.
X	 */
X	I2C_DATA_LOW;
X	I2C_CLOCK_HIGH;
X	I2C_DATA_HIGH;
X    return 1;
X}
X
X
X#ifdef PIP_WAIT
X
X/* USE DRIVER INTERFACE FOR WAITING IF IT IS AVAILABLE */
X
Xint pip_which_screen(prop)
X     RopPtr prop;
X{
X  int i;
X  for(i = 0; i < MAXSCREENS; i++) {
X    if(prop == &ropInfo[i])
X      return i;
X  }
X  fprintf(stderr, "libpip.c: which_screen: screen not found!\n", i);
X  return -1;
X}
X
Xpip_wait_off(prop)
X     RopPtr prop;
X{
X  rop_wait_ioctl rip;
X
X  if ((rip.screen = pip_which_screen(prop)) < 0) return 0;
X  rip.command = PIP_WAIT_OFF;
X  if (ioctl(wsFd, PIP_WAIT, &rip) != 0) {
X    return 0;
X  }
X  return 1;
X}
X
Xpip_wait_on(prop)
X     RopPtr prop;
X{
X  rop_wait_ioctl rip;
X
X  if ((rip.screen = pip_which_screen(prop)) < 0) return 0;
X  rip.command = PIP_WAIT_ON;
X  if (ioctl(wsFd, PIP_WAIT, &rip) != 0) {
X    return 0;
X  }
X  return 1;
X}
X#else
X
X/* IF DRIVER INTERFACE NOT AVAILABLE THEN JUST RETURN 0 */
X
Xpip_wait_off(prop)
X     RopPtr prop;
X{
X  return 0;
X}
X
Xpip_wait_on(prop)
X     RopPtr prop;
X{
X  return 0;
X}
X#endif
X
X/* DCC MOD  --- NEW PROCEDURE TO DETERMINE IF PIP IS ACTIVE --- 24.05.91 */
X
Xpip_active(prop)
X     RopPtr prop;
X{
X
X  Pip_Device_Regs	*pregs;
X  pregs = (Pip_Device_Regs *)prop->pipRegisters;
X
X  if (pregs->control_status & TC1_CSR0_PIP_IS_ACTIVE)
X    return 1;
X
X  return 0;
X
X}
X
X/* DCC MOD --- NEW PIP PROCEDURE FROM RASTEROPS --- 04.06.91 */
X
X/*"pip_hue"
X *
X *  Set the color hue for the incoming pip signal. This is 
X *  controlled by a register in the DMSD.
X */
Xvoid pip_hue(prop, level)
X     RopPtr prop;
X     int level;	                /* =  level of hue (0 to 255). */
X{
X  Pip_Device_Regs	*pregs;
X  pregs = (Pip_Device_Regs *)prop->pipRegisters;
X  i2c_write( &pregs->control_status1, I2C_ADDR_DMSD, 0x07, level&0xff );
X}
X
Xpip_priority(prop, prio)
X     RopPtr prop;
X     unsigned int prio;
X{
X
X  if (prio > 0xB0) prio = 0xB0;
X  *prop->dutyCycle = prio;
X
X}
X
X/* DCC MOD --- CHANGED TO USE LIBPIP.H SYMBOLS --- 04.06.91 */
X
X/*"pip_init"
X *
X *	Initialize pip hardware to an operable state. 
X */
XRopPtr
Xpip_init(index, type)
X     int index;
X     int		type;	/* =  type of video source: see libpip.h */
X{
X  /*
X   *	Set default source to composite, with pip turned off. Disable 
X   *	all special effects (e.g., inverted fields, flipped video).
X   *	Set pitch register to 1280.
X   */
X  Pip_Device_Regs	*pregs;	/* -> pip device register area. */
X  RopPtr prop;
X
X  prop = &ropInfo[index];
X  pregs = (Pip_Device_Regs *)prop->pipRegisters;
X
X  if (!pip_installed(prop)) return (RopPtr)NULL;
X
X  pregs->control_status = 0;
X  pregs->control_status1 = 0xC0;
X  pregs->control_status2 = 0;
X  
X  pregs->fb_pitch_hi = 0x05;
X  pregs->fb_pitch_low = 0x00;
X  
X  /*
X   *	Set signal source size to encompass the source type specified
X   *	by the caller.
X   */
X  switch( type & PIP_SOURCE_TIMING )
X    {
X    default:
X      fprintf(stderr,
X	      "pip_init: unknown source type %d; defaulting to NTSC\n", type);
X
X    case PIP_NTSC:
X      pregs->x_source_start_hi =  0x00;
X      pregs->x_source_start_low = 0x0c;
X      pregs->x_source_end_hi =    0x02;
X      pregs->x_source_end_low =   0x8c;
X      
X      pregs->x_source_scale_hi =  0x03;
X      pregs->x_source_scale_low = 0xff;
X      
X      pregs->y_source_start_hi =  0x00;
X      pregs->y_source_start_low = 0x07;
X      pregs->y_source_end_hi =    0x00;
X      pregs->y_source_end_low =   0xF7;
X      
X      pregs->y_source_scale_hi =  0x01;
X      pregs->y_source_scale_low = 0xff;
X      break;
X    case PIP_PAL:
X    case PIP_SECAM:
X      pregs->x_source_start_hi =  0x00;
X      pregs->x_source_start_low = 0x0a;
X      pregs->x_source_end_hi =    0x03;
X      pregs->x_source_end_low =   0x09;
X      
X      pregs->x_source_scale_hi =  0x03;
X      pregs->x_source_scale_low = 0xff;
X      
X      pregs->y_source_start_hi =  0x00;
X      pregs->y_source_start_low = 0x0b;
X      pregs->y_source_end_hi =    0x01;
X      pregs->y_source_end_low =   0x28;
X      
X      pregs->y_source_scale_hi =  0x01;
X      pregs->y_source_scale_low = 0xff;
X      break;
X    }
X  
X  /*
X   *	Initialize the DMSD and dcsc chips, which reside on the I2C bus.
X   */
X  pip_init_dmsd(&pregs->control_status1, type);
X  pip_init_dcsc(&pregs->control_status1, 16, 240);
X
X  return prop;
X
X}
X
X/*"pip_init_dcsc"
X *
X *  Initialize the Digital Color Space Convertor chip with a color ramp 
X *  for "digitizing" data received from the DMSD chip. Note that the 
X *  DCSC is left in composite video configuration, use pip_source to
X *  change to another one if that is appropriate.
X */
Xpip_init_dcsc(port, _min, _max)
X     u_char *port;	/* -> port containing I2C bus interface. */
X     int _min;		/* =  min value expected from DMSD chip for pixel. */
X     int _max;		/* =  max value expected from DMSD chip for pixel. */
X{
X  float	lut_delta;	/* DCSC lookup table inter-entry increment. */
X  int	lut_index;	/* DCSC lookup table value to load next. */
X  float	lut_value;	/* DCSC lookup table value to load next. */
X  
X  if ( _max-_min > 0) lut_delta = 255. / (_max-_min);
X  
X  i2c_write(port, I2C_ADDR_DCSC, I2C_SUBA_DCSC_CONTROL, DCSC_LOAD_LUT);
X  for ( lut_index = 0; lut_index < _min; lut_index++ )
X    {
X      i2c_write(port, I2C_ADDR_DCSC, I2C_SUBA_DCSC_DATA, 0);
X    }
X  for ( lut_value = 0; lut_index < _max; lut_index++, lut_value+=lut_delta )
X    {
X      i2c_write(port, I2C_ADDR_DCSC, I2C_SUBA_DCSC_DATA, (int)lut_value);
X    }
X  for ( ; lut_index < 256; lut_index++ )
X    {
X      i2c_write(port, I2C_ADDR_DCSC, I2C_SUBA_DCSC_DATA, 240);
X    }
X  i2c_write(port, I2C_ADDR_DCSC, I2C_SUBA_DCSC_CONTROL, pipDCSCSourceType);
X}
X
X/* DCC MOD --- 04.06.91 
X**   - changed to use libpip.h symbols
X**   - broke out type and timing init into different procedure
X*/
X
X/*"pip_init_dmsd"
X *
X *  Initialize the Phillips Digital Multi-Standard Decoder chip's parameters. 
X *  Send data serially over the on-board I2C bus to set up the DMSD chip to 
X *  provide scan conversion of NTSC and PAL signals.
X *
X */
Xpip_init_dmsd(port, type)
X     u_char	*port;		/* -> port containing I2C bus interface. */
X     int	type;		/* =  type of timing regimen see libpip.h */
X{
X  i2c_write( port, I2C_ADDR_DMSD, 0x00, 0x50 );
X  i2c_write( port, I2C_ADDR_DMSD, 0x01, 0x30 );
X  i2c_write( port, I2C_ADDR_DMSD, 0x02, 0x00 );
X  i2c_write( port, I2C_ADDR_DMSD, 0x03, 0xE8 );
X  i2c_write( port, I2C_ADDR_DMSD, 0x04, 0xB6 );
X  
X  i2c_write( port, I2C_ADDR_DMSD, 0x07, 0x00 );
X  i2c_write( port, I2C_ADDR_DMSD, 0x08, 0xFE );
X  i2c_write( port, I2C_ADDR_DMSD, 0x09, 0xF0 );
X  i2c_write( port, I2C_ADDR_DMSD, 0x0A, 0xFE );
X  i2c_write( port, I2C_ADDR_DMSD, 0x0B, 0xE0 );
X  i2c_write( port, I2C_ADDR_DMSD, 0x0C, 0x20 );
X  
X  i2c_write( port, I2C_ADDR_DMSD, 0x10, 0x00 );
X  i2c_write( port, I2C_ADDR_DMSD, 0x11, 0x80 );
X  
X  i2c_write( port, I2C_ADDR_DMSD, 0x14, 0x3A );
X  i2c_write( port, I2C_ADDR_DMSD, 0x15, 0x06 );
X  i2c_write( port, I2C_ADDR_DMSD, 0x16, 0xFA );
X  i2c_write( port, I2C_ADDR_DMSD, 0x17, 0xD6 );
X  i2c_write( port, I2C_ADDR_DMSD, 0x18, 0x20 );
X
X  pip_init_dmsd_type(port, type);
X
X}
X
Xpip_init_dmsd_type(port, type)
X     u_char	*port;		/* -> port containing I2C bus interface. */
X     int	type;		/* =  type of timing regimen see libpip.h */
X{
X
X  switch(type & PIP_SOURCE_TIMING)
X    {
X    default:
X    case PIP_NTSC: 
X      i2c_write( port, I2C_ADDR_DMSD, 0x05, 0xF2 ); 
X      i2c_write( port, I2C_ADDR_DMSD, 0x0D, 0x80 );
X      i2c_write( port, I2C_ADDR_DMSD, 0x0F, 0x58 ); 
X      break;
X    case PIP_PAL:  
X      i2c_write( port, I2C_ADDR_DMSD, 0x05, 0x34 ); 
X      i2c_write( port, I2C_ADDR_DMSD, 0x0D, 0x80 );
X      i2c_write( port, I2C_ADDR_DMSD, 0x0F, 0x39 );
X      break;
X    case PIP_SECAM:
X      i2c_write( port, I2C_ADDR_DMSD, 0x05, 0x34 ); 
X      i2c_write( port, I2C_ADDR_DMSD, 0x0D, 0x81 );
X      i2c_write( port, I2C_ADDR_DMSD, 0x0F, 0x3F );
X      break;
X    } 
X
X  switch(type & PIP_SOURCE_TYPE)
X    {
X    default:
X    case PIP_COMPOSITE: 
X      if (type & PIP_GRAY)
X	{
X	  i2c_write( port, I2C_ADDR_DMSD, 0x06, 0x13 );
X	  i2c_write( port, I2C_ADDR_DMSD, 0x0E, 0x37 );
X	}
X      else
X	{
X	  i2c_write( port, I2C_ADDR_DMSD, 0x06, 0x13 );
X	  i2c_write( port, I2C_ADDR_DMSD, 0x0E, 0x33 );
X	}
X      pipDCSCSourceType = DCSC_COMPOSITE_LUT;
X      break;
X    case PIP_SVIDEO:  
X      if (type & PIP_GRAY)
X	{
X	  i2c_write( port, I2C_ADDR_DMSD, 0x06, 0x13 );
X	  i2c_write( port, I2C_ADDR_DMSD, 0x0E, 0x33 );
X	}
X      else
X	{
X	  i2c_write( port, I2C_ADDR_DMSD, 0x06, 0x93 );
X	  i2c_write( port, I2C_ADDR_DMSD, 0x0E, 0x33 );
X	}
X      pipDCSCSourceType = DCSC_S_VIDEO_LUT;
X      break;
X    case PIP_RGB:
X      i2c_write( port, I2C_ADDR_DMSD, 0x06, 0x13 );
X      i2c_write( port, I2C_ADDR_DMSD, 0x0E, 0x30 );
X      pipDCSCSourceType = DCSC_RGB_LUT;
X      break;
X    } 
X
X}
X
X/* DCC MOD --- NEW PROCEDURE FOR XV --- 24.5.91 */
X
Xpip_input_connected(prop)
X     RopPtr prop;
X{
X  Pip_Device_Regs	*pregs;	/* -> pip device register area. */
X
X  pregs = (Pip_Device_Regs *)prop->pipRegisters;
X
X  if (pregs->control_status1 & TC1_CSR1_INPUT_CONNECTED)
X    return 1;
X
X  return 0;
X
X}
X
Xpip_installed(prop)
X     RopPtr prop;
X{
X  Pip_Device_Regs	*pregs;	/* -> pip device register area. */
X
X  pregs = (Pip_Device_Regs *)prop->pipRegisters;
X  return (!(pregs->control_status1 & TC1_CSR1_NO_PIP));
X}
