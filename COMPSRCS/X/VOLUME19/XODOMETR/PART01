Xinstall::
X	$(INSTALL) -c $(INSTPGMFLAGS) xodo     $(BINDIR)
X	$(INSTALL) -c $(INSTPGMFLAGS) xodomm.a $(BINDIR)
X	sed -e "s!/usr/local/bin!$(PERLDIR)!" evap/genmp.skl > evap/genmp
X	chmod 755 evap/genmp
