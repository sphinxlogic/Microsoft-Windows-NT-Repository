X	if ( /^-/ ) {
X	    print M "\n$_\n";
X	} else {
X	    print M "  $_";  
X	}
X
X    }
X    print M "\n.SH AUTHOR\n";
X    print M "Stephen O. Lidie, lusol@Lehigh.EDU\n\n";
X    print M "Copyright (C) 1993 - 1993, Lehigh University.\n";
X    print M "All rights reserved.\n";
X
X    close ( M );
X    close ( D );
X
X} # whilend
X
