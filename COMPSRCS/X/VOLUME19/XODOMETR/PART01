X evap/evap.h                3	
X evap/genmp                 1	
X evap/genmp.skl             1	
X evap/xodo.mm               1	
X evap/xodo_pdt              1	
X evap/xodo_pdt.out          1	
X evap/xodo_pdt.skl          1	
X patchlevel.h               1	
X xodo.c                     4	
X xodo.man                   1	
