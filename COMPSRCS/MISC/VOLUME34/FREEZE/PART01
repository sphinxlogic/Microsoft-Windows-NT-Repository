Xif test -z "$utimes"; then
Xecho "${DEFS}#include <sys/utime.h>" > conftest.c
Xeval "$CPP conftest.c > conftest.out 2>&1"
Xif egrep "utimbuf" conftest.out >/dev/null 2>&1; then
X  DEFS="${DEFS}#define SYSUTIME 1
X" utimes=1
Xfi
