Xecho "${DEFS}#include <utime.h>" > conftest.c
Xeval "$CPP conftest.c > conftest.out 2>&1"
Xif egrep "utimbuf" conftest.out >/dev/null 2>&1; then
X  DEFS="${DEFS}#define UTIME 1
X" utimes=1
Xfi
Xrm -f conftest*
