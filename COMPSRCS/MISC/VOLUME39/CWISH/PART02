Xstatic char overstrike;		/* overstrike mode */
Xstatic char kbuf[HISLNLEN];	/* kill buffer */
Xstatic int  kbuf_init = 0;	/* static kill buffer */
Xstatic char *beg;		/* line start      (first char on line)	*/
