X	standout();
X	mvaddstr( count_y * 3, count_x * 6, "    " );
X	mvaddstr( count_y * 3 + 1, count_x * 6, "    " );
X	standend();
X      }
X    }
X  }
X
X  refresh();
X  getch();
X
X  draw_board( game_board );
X}
