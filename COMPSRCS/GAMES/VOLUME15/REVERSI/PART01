Xdraw_board( board )
Xint *board;
X{
X  int x, y;
X  int num_w = 0, num_b = 0;
X  char str[80];
X
X  for( x = 0 ; x < 8 ; x++ ){
X    for( y = 0 ; y < 8 ; y++ ){
X      if( get_board( board, x, y ) == 1 ) num_w++;
X      else if( get_board( board, x, y ) == 2 ) num_b++;
X    }
X  }
X
X  mvaddstr( 17, 52, "           " );
X  mvaddstr( 18, 52, "           " );
X  sprintf( str, "White: %d", num_w );
X  mvaddstr( 17, 52, str );
X  sprintf( str, "Black: %d", num_b );
X  mvaddstr( 18, 52, str );
X
X  mvaddstr( 20, 52, "ESC for menu" );
X  mvaddstr( 21, 52, "By Elias Martenson" );
X
X  for( y = 0 ; y < 8 ; y++ ){
X    for( x = 0 ; x < 8 ; x++ ){
X      switch( get_board( board, x, y ) ){
X      case 0:
X	mvaddstr( y * 3, x * 6, " .. " );
X	mvaddstr( y * 3 + 1, x * 6, " .. " );
X	break;
X      case 1:
X	mvaddstr( y * 3, x * 6, "<  >" );
X	mvaddstr( y * 3 + 1, x * 6, "<  >" );
X	break;
X      case 2:
X	mvaddstr( y * 3, x * 6, "####" );
X	mvaddstr( y * 3 + 1, x * 6, "####" );
X	break;
X      default:
X	printf( "Error: I see there is an illegal square on the board!\n" );
X	break;
X      }
X    }
X  }
X
X  refresh();
X}
X
Xget_move( player, x, y )
Xint player;
Xint *x, *y;
X{
X  int x2, y2, end_getmove = FALSE;
X
X  x2 = 3;
X  y2 = 3;
X
X  do{
X    move( y2 * 3, x2 * 6 + 1 );
X    refresh();
X
X    switch( getch() ){
X    case 'h':
X      if( x2 >= 1 ) x2--;
X      break;
X    case 'j':
X      if( y2 <= 6 ) y2++;
X      break;
X    case 'k':
X      if( y2 >= 1 ) y2--;
X      break;
X    case 'l':
X      if( x2 <= 6 ) x2++;
X      break;
X    case ' ':
X      if( possible_move_square( game_board, x2, y2, player ) ){
X	end_getmove = TRUE;
X      }
X      break;
X    case '?':
X      do_help();
X      draw_board( game_board );
X      break;
X    case 12:
X      clearok( stdscr, TRUE );
X      refresh();
X      break;
X    case 27:
X      do_game_menu( player );
X      break;
X    }
X  }while( !end_getmove );
X
X  *x = x2;
X  *y = y2;
X}
X
