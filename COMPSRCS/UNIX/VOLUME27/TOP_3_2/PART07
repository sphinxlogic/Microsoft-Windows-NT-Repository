Xint process_states[7];
Xchar *procstatenames[] = {
X    "", " sleeping, ", " ABANDONED, ", " running, ", " starting, ",
X    " zombie, ", " stopped, ",
X    NULL
X};
X
X/* these are for detailing the cpu states */
X
Xint cpu_states[5];
Xint cpu_mp_states[MAXNCPUS][5];
Xchar *cpustatenames[] = {
X    "user", "nice", "system", "idle",
X    NULL
X};
