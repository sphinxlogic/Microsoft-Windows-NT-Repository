CLASS xdiary_exec
BEGIN
	_FILETYPE	EXEC;
	_PATTERN	"xdiary";
	_ICONFILE	xdiary.icon;
	MENU _Open    "exec /usr/X/bin/xdiary &";
	MENU Calendar "exec /usr/X/bin/xdiary -nodiary &";
	MENU Diary "exec /usr/X/bin/xdiary -nocalendar &";
	MENU Fullyear "exec /usr/X/bin/xdiary -fullyear &";
	MENU French "exec /usr/X/bin/xdiary -language French &";
	MENU German "exec /usr/X/bin/xdiary -language German &";
	MENU Spanish "exec /usr/X/bin/xdiary -language Spanish &";
END
