$! Set up error handling and flags
$!
$ ON CONTROL_Y THEN VMI$CALLBACK CONTROL_Y
$ ON WARNING THEN GOTO ERR_EXIT
$ DBB$VERSION == "044"
$ VAXDT$VMS == 0
$!
$! Handle INSTALL
$!
$ IF P1 .EQS. "VMI$_INSTALL" THEN GOTO INSTALL
$ EXIT VMI$_UNSUPPORTED
$ INSTALL:
$!
$! Check for valid VMS version
$! Will install to any version 4.4 or later.
$!
$ CHECK_VMS:
$ IF F$EXTRACT(F$LOCATE(",",VMI$VMS_VERSION)+1,3,VMI$VMS_VERSION)-
         .GES. DBB$VERSION THEN VAXDT$VMS == 1
$ IF .NOT. VAXDT$VMS THEN VMI$CALLBACK MESSAGE E BADVMS -
    "This kit requires version 4.4 or a subsequent version of VMS"
$ IF .NOT. VAXDT$VMS THEN EXIT VMI$_FAILURE
$!
$! Create target directories
$!
$ VMI$CALLBACK ASK VMI$ " target directory for files to be copied. no brackets"-
  "" S 
$!
$ GET_DIR = VMI$
$ VMI$CALLBACK CREATE_DIRECTORY SYSTEM 'GET_DIR'
$!
$! To copy files from save_set ACT001 add a line to kitinstal.com 
$ VMI$CALLBACK PROVIDE_FILE ACT$ ACT_DEMO.BAS VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ ACT_DEMO.EXE VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ ACT_DEMO.OBJ VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ ACT_DEMO.COM   VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ ACT_DEMO.CFG VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ ACT_DEMO.CLD VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ BANKING.BAS VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ BANKING.OBJ   VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ DESCRIP.MMS   VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ DIST.BAS     VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ DIST.OBJ     VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ DTKDEF.BAS     VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ FIELD.BAS  VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ FIELD.OBJ       VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ FINANCIAL.BAS   VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ FINANCIAL.OBJ   VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ INFO_SERVE.BAS  VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ INFO_SERVE.OBJ  VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ LABOR.BAS       VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ LABOR.OBJ       VMI$ROOT:['GET_DIR']
$ VMI$CALLBACK PROVIDE_FILE ACT$ README.ACT      VMI$ROOT:['GET_DIR']
$!
$ FILE=F$logical("VMI$ROOT")
$ VMI$CALLBACK MESSAGE " the directory ''GET_DIR' is located under ''FILE'"
$ ERR_EXIT:
$ S = $STATUS
$ EXIT S
